<div class="container-fluid subscribe align-center">
	<div class="section-title align-center">
		<div class="half-width">
			<p class="sub m-bottom-half"><span>{{global.subscribe.subheader}}</span></p>
			<h2 class="m-bottom-half">{{global.subscribe.title}}</h2>
			<p class="desc">{{global.subscribe.description}}</p>
			<form>
				<div class="input-group mb-3">
					<input type="text" class="form-control" placeholder="Enter your email address">
					<div class="input-group-append">
						<button class="btn btn-outline-secondary" type="button">{{global.subscribe.btn_text}}</button>
					</div>
				</div>
			</form>
		</div>
		<p class="mobile"><img src="{{{global.subscribe.img}}}"></p>
	</div>
</div>